{{#with contributor}}
	<article class="column is-1-widescreen">
		<figure class="image is-64x64 mx-auto">
			<img
				alt="{{name}}"
				class="is-rounded"
				width="64"
				height="64"
				src="{{avatarUrl}}"
			/>
		</figure>
		<p>{{name}}</p>
	</article>
{{/with}}